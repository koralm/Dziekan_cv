            .bgimage.nopadding
                .titlecont
                    .hh1 Prof. dr hab. inż. dr h.c.
                    .hh0 Stefan Berczyński
                    .h4 Dziekan Wydziału Inżynierii Mechanicznej i Mechatroniki
                    .button.btn.btn-lg.btn-primary(type='button') Program wyborczy
                    .footm
                        hr
                        .row
                            .col-md-4
                                i.fa.fa-map-marker.fa-fw
                                span al. Piastów 19, 70-310 Szczecin
                            .col-md-4
                                i.fa.fa-envelope-o.fa-fw
                                span stefan.berczynski@zut.edu.pl
            .panel-cont
                .row
                    .col-md-6
                        .panel.panel-default
                            .panel-body
                                .row
                                    i.ix.fa.fa-graduation-cap.fa-5x
                                    p.hcard Przebieg pracy naukowej
                                    .timeline.timeline-left.gray-blue
                                        .timeline-block
                                            .timeline-icon
                                            .timeline-content
