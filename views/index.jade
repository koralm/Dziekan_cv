extends layout

block content
    .row
        .col-md-3.nopadding
            #stick
                img.img-responsive(src='images/gabinet_updated.jpg', alt='Cinque Terre')

                ul.nav.nav-pills.nav-stacked.text-right
                    li
                        a(href='#')
                            | O mnie
                            i.fa.fa-pencil-square-o.fa-lg
                    li
                        a(href='#')
                            | Najważniejszcze artykuły
                            i.fa.fa-graduation-cap.fa-lg
                    li
                        a(href='#')
                            | Projekty
                            i.fa.fa-university.fa-lg
                    li
                        a(href='#')
                            | Program wyborczy
                            i.fa.fa-trophy.fa-lg
        .col-md-9.nopadding
            #stick1
                .loga
                    img.imgx(src='images/ZUT_logo.jpg', alt='Cinque Terre')
