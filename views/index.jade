                                                p Politechnika Warszawska, Wydział Mechaniczny Technologiczny
                                                .timeline-date 1982
                                        .timeline-block
                                            .timeline-icon
                                            .timeline-content
                                                h3 prof. dr hab. inż
                                                p Tytuł profesora nauk technicznych
                                                .timeline-date 1990
                                        .timeline-block
                                            .timeline-icon
                                            .timeline-content
                                                h3 prof. dr hab. inż. dr h.c.
                                                p Uniwersytet Techniczny w Sankt-Petersburgu
                                                .timeline-date 1999

                    .col-md-6
                        .panel.panel-default
                            .panel-body
                                .row
                                    i.ix.fa.fa-search.fa-5x
                                    p.hcard Zainteresowania
                                    ul
                                        li
                                            h4 Dynamika obrabiarek
                                        li
                                            h4 Dynamika budowli
                                        li
                                            h4 Komputerowe wspomaganie projektowania
                                        li
                                            h4 Optymalizacja i identyfikacja właściwości dynamicznych maszyn
                                        li
                                            h4 Technologia nagniatania powierzchni
                    .row
                        .col-md-6
                            .panel.panel-default
                                .panel-body
                                    .row
                                        i.ix.fa.fa-book.fa-5x
                                        p.hcard Dorobek naukowy
                                        ul
                                            li
                                                h4 2 monografie
                                            li
                                                h4 2 skrypty
                                            li
                                                h4 205 artykułów i referatów
                                            li
                                                h4 75 niepublikowanych prac naukowo-badawczych
                        .col-md-6
                            .panel.panel-default
                                .panel-body
                                    .row
                                        i.ix.fa.fa-users.fa-5x
