                                        ul
                                            li
                                                h4 promotor 9 rozpraw doktorskich
                                            li
                                                h4 opiekun naukowy 2 doktorantek

                .row
                    .col-md-12
                        .panel.panel-default
                            .panel-body
                                .row
                                    i.ix.fa.fa-cogs.fa-5x
